<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Tracker</title>
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js" integrity="sha512-b+nQTCdtTBIRIbraqNEwsjB6UvL3UEMkXnhzd8awtCYh0Kcsjl9uEgwVFVbhoj3uu1DO1ZMacNvLoyJJiNfcvg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <header class="navbar border-bottom box-shadow mb-3">
        <h1>Expense Tracker</h1>
        @if (ViewBag.HideLogout == null || ViewBag.HideLogout == false)
        {
            <form asp-controller="User" asp-action="Logout" method="post" style="display: inline;">
                <button class="logout" type="submit">Log Out</button>
            </form>
        }
        
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
        <p>&copy; 2025 Expense Tracker</p>
        </div>
    </footer>

    <script src="~/js/custom.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
