
<!-- The Overlay (hidden by default) -->
<div  class="overlay"></div>

<div  class="edit-modal">
    <h2 class="table-title">EDIT EXPENSE</h2>
    <form class="edit-expense-form" id="edit-expense-form">

        <input type="hidden" id="expense-id" name="ExpenseId" value="@Model.ExpenseId" />
    
        <div class="myform-row">
            <div class="myform-group">
                <label for="expense-date">Date</label>
                <input type="date" id="expense-date" name="ExpenseDate" class="form-input" required value="@Model.ExpenseDate.ToString("yyyy-MM-dd")"/>
            </div>
            <div class="myform-group">
                <label for="expense-amount">Amount</label>
                <input type="number" step="0.01" id="expense-amount" name="Amount" class="form-input" required value="@Model.Amount" />
            </div>
        </div>
        
        <div class="myform-row">
        
            <div class="myform-group">
            <label for="CategoryId" >Category</label>
            <select name="CategoryId"  class="form-input">

                @{var categories = ViewData["Categories"] as List<Category>;}

                <option value="">-- Select a Category --</option> <!-- Default option -->

                @if (categories != null)
                {
                    @foreach (var category in categories)
                    {
                        <option value="@category.CategoryId">@category.Name</option>
                    }
                }
            </select>
        </div>
        
        <div class="myform-row">
            <div class="myform-group">
                <label for="notes">Notes</label>
                <input type="text" id="notes" name="Description" class="form-input" value="@Model.Description" />
            </div>
        </div>
            <input type="hidden" name="UserId" value="1" /> <!-- Set UserId manually for now -->
            <button type="submit" class="edit-form-button">Edit Expense</button>
            <button  class="cancel-button">Cancel</button>
    </form>
</div>

            