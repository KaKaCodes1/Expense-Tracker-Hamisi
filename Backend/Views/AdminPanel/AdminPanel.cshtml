@model List<Backend.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded">
        <div class="card-body">
            <h3 class="text-center text-primary">Users</h3>
            <table class="table table-borderless text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th class="text-start">Names</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Roles</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="text-start">@user.Name</td>
                                <td>@user.Email</td>
                                <td class="fw-bold @(user.IsActive ? "text-success" : "text-danger")">
                                    @(user.IsActive ? "Active" : "Deactivated")
                                </td>
                                <td>@user.Role</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="text-dark me-2">
                                        <i class="fas fa-edit"></i> <!-- Font Awesome Edit Icon -->
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.Id" class="text-dark"
                                       onclick="return confirm('Are you sure you want to delete this user?');">
                                        <i class="fas fa-trash-alt text-danger"></i> <!-- Font Awesome Delete Icon -->
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No users found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


